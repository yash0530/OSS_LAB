\mode<presentation>

% header
\defbeamertemplate*{frametitle}{AU}[1][]
{   \ifx\insertframesubtitle\@empty%
    {
%\colorbox{yellow}{%
        \begin{beamercolorbox}[wd=0.99\paperwidth,ht=1.2cm,leftskip=0.25cm,#1]{frametitle}
            \usebeamerfont{frametitle}\insertframetitle\par%
        \end{beamercolorbox}
%}
    }%
    \else%
    {   \vspace{0.15cm}
%\colorbox{blue}{%
        \begin{beamercolorbox}[wd=0.99\paperwidth,ht=1.2cm,leftskip=0.25cm,#1]{frametitle}
            {\linespread{0.7}\usebeamerfont{frametitle}\insertframetitle\par}%
            {\linespread{0.9}\usebeamerfont{framesubtitle}\insertframesubtitle\par}%
        \end{beamercolorbox}
%}    
    }%
    \fi
}

% footer
\defbeamertemplate*{footline}{AU}[1][]
{   \ifnum\thepage>1\relax%
    {   \ifinsectionframe{}
        \else%
        {   \ifinhighlightframe{}
            \else
            {   \vspace{-0.30cm}
                \leavevmode
                \begin{beamercolorbox}[wd=.10\paperwidth,sep=1em]{}
                    \phantom{A}
                \end{beamercolorbox}%
                \begin{beamercolorbox}[wd=.40\paperwidth,sep=1em,left]{title in head/foot}
                    \usebeamercolor{title in head/foot}\beamer@shorttitle
                \end{beamercolorbox}%    
                \begin{beamercolorbox}[wd=0.20\paperwidth,sep=1em,left]{author in head/foot}
                    \usebeamercolor{author in head/foot}\insertshortauthor
                \end{beamercolorbox}%
                \begin{beamercolorbox}[wd=0.20\paperwidth,sep=1em,left]{date in head/foot}
                    \usebeamercolor{date in head/foot}\insertshortdate
                \end{beamercolorbox}%    
                \begin{beamercolorbox}[wd=.10\paperwidth,sep=1em,right]{title in head/foot}
                    \usebeamercolor{title in head/foot}\insertframenumber/\inserttotalframenumber
                \end{beamercolorbox}%
            }
            \fi
        }
        \fi
    }
    \fi
}

% section page
\defbeamertemplate*{section page}{AU}[1][]
{   \begin{tikzpicture}[remember picture]
        \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
        \node[anchor=south west] at (-0.5cm,0.525\paperheight){%
            \usebeamerfont{section name}\color{titleCol}\sectionname~\insertsectionnumber\par%
        };
        \node[text width=11.5cm,anchor=north west] at (-0.5,0.49\paperheight) {%
            \linespread{0.7}\usebeamerfont{title}\color{titleCol}\secname\par%
        };
    \end{tikzpicture}
}

% highlight page
\newcommand{\highlighttext}{}
\defbeamertemplate*{highlight page}{AU}[1][]
{   \centering
    \vspace{1cm}
    \usebeamerfont{highlight title}\color{titleCol}\highlighttext\par%
}

\mode<all>
